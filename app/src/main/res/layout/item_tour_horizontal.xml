<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Skeleton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    >
    <io.rmiri.skeleton.SkeletonGroup
        android:id="@+id/skeletonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        Skeleton:SK_BackgroundViewsColor="@color/skelton_back"
        Skeleton:SK_animationAutoStart="true"
        Skeleton:SK_animationDirection="LTR"
        Skeleton:SK_animationDuration="1000"
        Skeleton:SK_animationFinishType="gradient"
        Skeleton:SK_animationNormalType="gradient"
        Skeleton:SK_backgroundMainColor="@android:color/transparent"
        Skeleton:SK_highLightColor="@color/skelton_highlight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">
            <!--Photo-->
            <com.andexert.library.RippleView
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ripple:rv_color = "@android:color/black"
                ripple:rv_type="rectangle"
                ripple:rv_rippleDuration="100"
                android:clickable="true"
                android:focusable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/except_fav_and_price">
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <io.rmiri.skeleton.SkeletonView
                            android:id="@+id/skeletonViewPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/image"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:scaleType="centerCrop" />
                        </io.rmiri.skeleton.SkeletonView>
                    </android.support.v7.widget.CardView>
                    <RelativeLayout
                        android:id="@+id/t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">
                        <io.rmiri.skeleton.SkeletonView
                            android:id="@+id/re"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLines="2"
                                    android:minLines="1"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />
                                <LinearLayout
                                    android:id="@+id/reviews"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"
                                    >
                                    <android.support.v7.widget.AppCompatRatingBar
                                        android:id="@+id/ratebar"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="80dp"
                                        android:layout_height="14dp"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:stepSize="0.1" />
                                    <TextView
                                        android:id="@+id/numofreviews"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </io.rmiri.skeleton.SkeletonView>
                        <io.rmiri.skeleton.SkeletonView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/re">
                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:gravity="start"
                                android:maxLines="2"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/from_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/description"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:gravity="start|top"
                                android:drawablePadding="8dp"
                                android:maxLines="2"
                                android:drawableStart="@drawable/ic_today_black_24dp"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />
                        </io.rmiri.skeleton.SkeletonView>
                    </RelativeLayout>
                </LinearLayout>
            </com.andexert.library.RippleView>
            <!--divider-->
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/dividerColor" />
            <!--control btns-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp">
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/wishlist_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_favorite"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"/>
                <io.rmiri.skeleton.SkeletonView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/wishlist_btn">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end|center_vertical"
                        android:text="Hello"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </io.rmiri.skeleton.SkeletonView>
            </RelativeLayout>
        </LinearLayout>
    </io.rmiri.skeleton.SkeletonGroup>
</android.support.v7.widget.CardView>
